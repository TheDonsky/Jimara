		// Shade: 
		jimara_RayTracedRenderer_Call_Payload.eyePosition = eyePosition;
		if (bouncesLeft > 0) {
			jimara_RayTracedRenderer_Call_Payload.flags = JM_RT_PAYLOAD_FLAGS_INDIRECT_CAN_REQUEST_SAMPLE;
			bouncesLeft--;
		}
