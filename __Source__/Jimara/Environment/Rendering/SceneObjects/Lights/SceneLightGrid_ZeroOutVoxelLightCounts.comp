
#version 450
#define BLOCK_SIZE 256
layout(local_size_x = BLOCK_SIZE, local_size_y = 1, local_size_z = 1) in;

layout (set = 0, binding = 0) buffer Counts { 
    uint of[];
} counts;

void main() {
    uint index = uint(gl_GlobalInvocationID.x);
    if (index < counts.of.length())
        counts.of[index] = 0;
}
